<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             style="@style/AppTheme.NoActionBar"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_sun"
        android:id="@+id/sun_imageView"
        android:layout_width="150dp"
        android:foregroundGravity="center_horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_cloud"
        android:id="@+id/big_cloud_imageView"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:visibility="gone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_cloud"
        android:id="@+id/cloud_imageView"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintLeft_toLeftOf="@+id/guideline7"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/title_weather_imageView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/weather_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/snow_imageView"
        app:srcCompat="@drawable/snowflake"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_width="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/snow_imageView2"
        app:srcCompat="@drawable/snowflake"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_width="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/snow_imageView3"
        app:srcCompat="@drawable/snowflake"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_width="20dp"
        app:layout_constraintTop_toTopOf="@+id/guideline9"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/snow_imageView4"
        app:srcCompat="@drawable/snowflake"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/snow_imageView5"
        app:srcCompat="@drawable/snowflake"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="20dp"
        />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="517dp"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp"
        app:layout_constraintGuide_percent="0.5"/>


    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.102514505"
        tools:layout_editor_absoluteY="53dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2591876"
        tools:layout_editor_absoluteY="134dp"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>