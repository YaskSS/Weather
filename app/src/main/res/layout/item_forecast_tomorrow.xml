<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:carcard_view="http://schemas.android.com/tools"
                                    android:orientation="vertical"
                                    android:layout_width="60dp"
                                    android:layout_height="80dp"
                                    app:cardCornerRadius="2dp"
                                    android:padding="8dp"
                                    android:layout_margin="0dp"
                                    carcard_view:cardBackgroundColor="#81D4FA">


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">




    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTomorrowDate"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:textColor="#000"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:id="@+id/imageViewTomorrow"
        app:layout_constraintTop_toBottomOf="@+id/textViewTomorrowDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTomorrowTemperature"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTomorrow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:textColor="#000"/>
</android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>